<%- include('../partials/header') %>

<div class="card detail-card">
    <h2><%= course.Name %></h2>
    <p><strong><%= __('label_credits') %>:</strong> <%= course.Credits %></p>
    <div style="margin-top: 15px;">
        <% if (role === 'admin') { %>
            <a href="/courses/edit/<%= course.ID %>" class="btn"><%= __('btn_edit') %></a>
            <a href="/courses/<%= course.ID %>/enroll" class="btn" style="background-color: #28a745;"><%= __('btn_enroll') %></a>
        <% } %>
        <a href="/courses" class="btn secondary"><%= __('btn_cancel') %></a>
    </div>
</div>

<h3><%= __('detail_course_students') %></h3>

<% if (students.length > 0) { %>
    <table>
        <thead>
        <tr>
            <th><%= __('table_name') %></th>
            <th><%= __('table_grade') %></th>
            <th><%= __('table_actions') %></th>
        </tr>
        </thead>
        <tbody>
        <% students.forEach(student => { %>
            <tr>
                <td><%= student.First_Name %> <%= student.Last_Name %></td>
                <td>
                    <% if (role === 'admin') { %>
                        <form action="/courses/<%= course.ID %>/grade/<%= student.ID %>" method="POST" style="display: flex; gap: 5px; align-items: center;">
                            <input
                                    type="number"
                                    name="grade"
                                    value="<%= student.grade %>"
                                    step="0.5"
                                    min="2"
                                    max="5"
                                    style="width: 80px; padding: 5px;"
                            >
                            <button type="submit" class="btn-sm edit"><%= __('btn_update') || 'Set' %></button>
                        </form>
                    <% } else { %>
                        <%= student.grade %>
                    <% } %>
                </td>
                <td>
                    <% if (role === 'admin') { %>
                        <form action="/courses/<%= course.ID %>/remove/<%= student.ID %>" method="POST" onsubmit="return confirm('<%= __('confirm_unenroll') %>')">
                            <button type="submit" class="btn-sm delete"><%= __('btn_remove') %></button>
                        </form>
                    <% } else { %>
                        <span style="color: #999;"><%= __('text_read_only') %></span>
                    <% } %>
                </td>
            </tr>
        <% }) %>
        </tbody>
    </table>
<% } else { %>
    <p><%= __('no_enrollments') %></p>
<% } %>

<%- include('../partials/footer') %>