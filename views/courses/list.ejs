<%- include('../partials/header') %>

<div class="header-flex">
    <h2>Courses List</h2>
    <% if (user) { %>
    <a href="/courses/add" class="btn">Add New Course</a>
    <% } %>
</div>

<table>
    <thead>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Credits</th>
        <% if (user) { %> <th>Actions</th> <% } %>
    </tr>
    </thead>
    <tbody>
    <% courses.forEach(course => { %>
        <tr>
            <td><%= course.ID %></td>
            <td><%= course.Name %></td>
            <td><%= course.Credits %></td>
            <% if (user) { %>
            <td>
                <a href="/courses/view/<%= course.ID %>" class="btn-sm view">View</a>
                <a href="/courses/edit/<%= course.ID %>" class="btn-sm edit">Edit</a>

                <form action="/courses/delete/<%= course.ID %>" method="POST" style="display:inline;" onsubmit="return confirm('Delete this course?')">
                    <button type="submit" class="btn-sm delete">Delete</button>
                </form>

            </td>
            <% } else { %>
            <% } %>
        </tr>
    <% }) %>
    </tbody>
</table>

<div class="pagination" style="margin-top: 20px; text-align: center;">
    <% if (currentPage > 1) { %>
        <a href="/courses?page=<%= currentPage - 1 %>" class="btn secondary">Previous</a>
    <% } %>

    <span style="margin: 0 10px;">Page <%= currentPage %> of <%= totalPages %></span>

    <% if (currentPage < totalPages) { %>
        <a href="/courses?page=<%= currentPage + 1 %>" class="btn secondary">Next</a>
    <% } %>
</div>

<%- include('../partials/footer') %>