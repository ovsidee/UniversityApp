<%- include('../partials/header') %>

<div class="header-flex">
    <h2><%= __('page_courses_title') %></h2>
    <% if (role === 'admin') { %>
        <a href="/courses/add" class="btn"><%= __('btn_add_course') %></a>
    <% } %>
</div>

<table>
    <thead>
    <tr>
        <th><%= __('table_id') %></th>
        <th><%= __('table_name') %></th>
        <th><%= __('table_credits') %></th>
        <th><%= __('table_actions') %></th>
    </tr>
    </thead>
    <tbody>
    <% if(courses.length === 0) { %> <tr><td colspan="4"><%= __('no_courses') %></td></tr> <% } %>
    <% courses.forEach(course => { %>
        <tr>
            <td><%= course.ID %></td>
            <td><%= course.Name %></td>
            <td><%= course.Credits %></td>
            <td>
                <a href="/courses/view/<%= course.ID %>" class="btn-sm view"><%= __('btn_view') %></a>

                <% if (role === 'admin') { %>
                    <a href="/courses/edit/<%= course.ID %>" class="btn-sm edit"><%= __('btn_edit') %></a>
                    <form action="/courses/delete/<%= course.ID %>" method="POST" style="display:inline;" onsubmit="return confirm('<%= __('confirm_delete') %>')">
                        <button type="submit" class="btn-sm delete"><%= __('btn_delete') %></button>
                    </form>
                <% } %>
            </td>
        </tr>
    <% }) %>
    </tbody>
</table>

<div class="pagination" style="margin-top: 20px; text-align: center;">
    <% if (currentPage > 1) { %>
        <a href="/courses?page=<%= currentPage - 1 %>" class="btn secondary"><%= __('btn_prev') %></a>
    <% } %>

    <span style="margin: 0 10px;">
        <%= __('page_info') %> <%= currentPage %> / <%= totalPages %>
    </span>

    <% if (currentPage < totalPages) { %>
        <a href="/courses?page=<%= currentPage + 1 %>" class="btn secondary"><%= __('btn_next') %></a>
    <% } %>
</div>

<%- include('../partials/footer') %>