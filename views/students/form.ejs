<%- include('../partials/header') %>

<h2><%= mode %> Student</h2>

<% if (error) { %>
    <div class="alert error"><%= error %></div>
<% } %>

<form action="<%= mode === 'Add' ? '/students/add' : '/students/edit/' + student.ID %>" method="POST" class="form-card">

    <div class="form-group">
        <label>First Name:</label>
        <input type="text" name="first_name" value="<%= student.First_Name || '' %>" required>
    </div>

    <div class="form-group">
        <label>Last Name:</label>
        <input type="text" name="last_name" value="<%= student.Last_Name || '' %>" required>
    </div>

    <div class="form-group">
        <label>Email:</label>
        <input type="email" name="email" value="<%= student.Email || '' %>" required>
    </div>

    <div class="form-group">
        <label>Phone Number:</label>
        <input type="tel" name="phone" value="<%= student.PhoneNumber || '' %>" pattern="[0-9-]+" title="Only numbers and hyphens allowed">
    </div>

    <div class="actions">
        <button type="submit" class="btn"><%= mode === 'Edit' ? 'Update' : 'Save' %></button>
        <a href="/students" class="btn secondary">Cancel</a>
    </div>
</form>

<%- include('../partials/footer') %>