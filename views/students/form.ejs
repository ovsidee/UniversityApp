<%- include('../partials/header') %>

<h2><%= mode === 'Add' ? __('btn_add_student') : __('btn_edit') %></h2>

<% if (error) { %>
    <div class="alert error"><%= __(error) %></div>
<% } %>

<form action="<%= mode === 'Add' ? '/students/add' : '/students/edit/' + student.ID %>" method="POST" class="form-card">

    <div class="form-group">
        <label><%= __('label_firstname') %>:</label>
        <input type="text" name="first_name" value="<%= student.First_Name || '' %>" required>
    </div>

    <div class="form-group">
        <label><%= __('label_lastname') %>:</label>
        <input type="text" name="last_name" value="<%= student.Last_Name || '' %>" required>
    </div>

    <div class="form-group">
        <label><%= __('label_email') %>:</label>
        <input type="email" name="email" value="<%= student.Email || '' %>" required>
    </div>

    <div class="form-group">
        <label><%= __('label_phone') %>:</label>
        <input type="tel" name="phone" value="<%= student.PhoneNumber || '' %>" pattern="[0-9-]+" title="Only numbers and hyphens allowed">
    </div>

    <div class="actions">
        <button type="submit" class="btn">
            <%= mode === 'Edit' ? __('btn_update') : __('btn_save') %>
        </button>
        <a href="/students" class="btn secondary"><%= __('btn_cancel') %></a>
    </div>
</form>

<%- include('../partials/footer') %>