<%- include('../partials/header') %>

<div class="card detail-card">
    <h2><%= student.First_Name %> <%= student.Last_Name %></h2>

    <p><strong><%= __('table_email') %>:</strong> <%= student.Email %></p>
    <p><strong><%= __('label_phone') %>:</strong> <%= student.PhoneNumber %></p>

    <div style="margin-top: 15px;">
        <% if (role === 'admin') { %>
            <a href="/students/edit/<%= student.ID %>" class="btn"><%= __('btn_edit') %></a>
            <a href="/students/<%= student.ID %>/enroll" class="btn" style="background-color: #28a745;"><%= __('btn_enroll') %></a>
        <% } %>
        <a href="/students" class="btn secondary"><%= __('btn_cancel') %></a> </div>
</div>

<h3><%= __('detail_enrolled_title') %></h3>

<% if (enrollments.length > 0) { %>
    <table>
        <thead>
        <tr>
            <th><%= __('label_coursename') %></th>
            <th><%= __('label_credits') %></th>
            <th><%= __('table_grade') %></th>
            <th><%= __('table_date') %></th>
            <% if (role === 'admin') { %><th><%= __('table_actions') %></th><% } %>
        </tr>
        </thead>
        <tbody>
        <% enrollments.forEach(enrol => { %>
            <tr>
                <td><%= enrol.Name %></td>
                <td><%= enrol.Credits %></td>
                <td><%= enrol.grade || 'N/A' %></td>
                <td><%= enrol.enrollment_date %></td>

                <% if (role === 'admin') { %>
                    <td>
                        <form action="/students/<%= student.ID %>/enroll/<%= enrol.course_ID %>?_method=DELETE" method="POST" onsubmit="return confirm('<%= __('confirm_unenroll') %>')">
                            <button type="submit" class="btn-sm delete"><%= __('btn_remove') %></button>
                        </form>
                    </td>
                <% } %>
            </tr>
        <% }) %>
        </tbody>
    </table>
<% } else { %>
    <p><%= __('no_enrollments') %></p>
<% } %>

<%- include('../partials/footer') %>