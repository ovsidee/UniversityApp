<%- include('../partials/header') %>

<h2><%= __('register_title') %></h2>
<% if (error) { %> <div class="alert error"><%= __(error) %></div> <% } %>

<form action="/register" method="POST" class="form-card">

    <div class="form-group">
        <label><%= __('label_username') %></label>
        <input type="text" name="username" required>
    </div>

    <div class="form-group">
        <label><%= __('label_password') %></label>
        <input type="password" name="password" required>
        <small style="color: #666; font-size: 0.85em; display: block; margin-top: 5px;">
            <%= __('password_hint') %>
        </small>
    </div>

    <h3 style="font-size: 1rem; margin-bottom: 15px; color: #555;"><%= __('student_profile_details') %></h3>

    <div class="form-group">
        <label><%= __('label_firstname') %></label>
        <input type="text" name="first_name" required>
    </div>

    <div class="form-group">
        <label><%= __('label_lastname') %></label>
        <input type="text" name="last_name" required>
    </div>

    <div class="form-group">
        <label><%= __('label_email') %></label>
        <input type="email" name="email" required>
    </div>

    <div class="form-group">
        <label><%= __('label_phone') %></label>
        <input type="tel" name="phone" pattern="[0-9-]+" title="Only numbers and hyphens allowed">
    </div>

    <button type="submit" class="btn"><%= __('register_btn') %></button>
</form>

<%- include('../partials/footer') %>