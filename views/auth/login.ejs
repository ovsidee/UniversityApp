<%- include('../partials/header') %>

<h2><%= __('login_title') %></h2>

    <% if (error) { %> <div class="alert error"><%= error %></div> <% } %>
    <form action="/login" method="POST" class="form-card">
        <div class="form-group">
            <label><%= __('label_username') %></label>
            <input type="text" name="username" required>
        </div>
        <div class="form-group">
            <label><%= __('label_password') %></label>
            <input type="password" name="password" required>
        </div>
        <button type="submit" class="btn"><%= __('login_btn') %></button>
        <p><a href="/register"><%= __('register_link') %></a></p>
    </form>

<%- include('../partials/footer') %>