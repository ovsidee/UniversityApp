<%- include('partials/header') %>

<div style="text-align: center; padding: 60px 20px; background: #f8f9fa; border-radius: 8px; margin-bottom: 30px;">
    <h1 style="color: #333;"><%= __('hero_title') %></h1>
    <p style="font-size: 1.2em; color: #666;"><%= __('hero_subtitle') %></p>

    <div style="margin-top: 30px;">
        <% if (user) { %>
            <a href="/courses" class="btn"><%= __('hero_btn_view_courses') %></a>
        <% } else { %>
            <a href="/login" class="btn"><%= __('hero_btn_login') %></a>
        <% } %>
    </div>
</div>

<div class="features" style="display: flex; gap: 20px; margin-top: 40px; justify-content: space-around; flex-wrap: wrap;">
    <div class="card detail-card" style="flex: 1; min-width: 250px; text-align: center;">
        <h3><%= __('feat_students_title') %></h3>
        <p><%= __('feat_students_desc') %></p>
        <% if (role !== 'guest') { %>
            <a href="/students" class="btn-sm view" style="margin-top:10px; display:inline-block"><%= __('btn_view') %></a>
        <% } %>
    </div>

    <div class="card detail-card" style="flex: 1; min-width: 250px; text-align: center;">
        <h3><%= __('feat_courses_title') %></h3>
        <p><%= __('feat_courses_desc') %></p>
        <% if (role !== 'guest') { %>
            <a href="/courses" class="btn-sm view" style="margin-top:10px; display:inline-block"><%= __('btn_view') %></a>
        <% } %>
    </div>
</div>

<%- include('partials/footer') %>